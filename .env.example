# Backend
PORT=4000
MONGO_URI=mongodb://mongo:27017/shared_experiences
FRONTEND_ORIGIN=http://localhost:5173

# LLM provider: 'deepseek' or leave blank to use OpenAI if key present
LLM_PROVIDER=deepseek

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL_CATEGORIZE=deepseek-chat
DEEPSEEK_MODEL_EMBED=

# OpenAI (fallback)
OPENAI_API_KEY=
OPENAI_MODEL_CATEGORIZE=gpt-4o-mini
OPENAI_MODEL_EMBED=text-embedding-3-small

# Neo4j (optional)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword

# Clustering
CLUSTER_K=8

# Frontend build-time API base override (optional)
FRONTEND_VITE_API_BASE=http://localhost:4000
